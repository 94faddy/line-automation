# ═══════════════════════════════════════════════════════════════
# 🌐 SERVER SETTINGS
# ═══════════════════════════════════════════════════════════════
PORT=5544
HOST=localhost

# Auto-refresh status interval (วินาที)
AUTO_REFRESH_INTERVAL=10

# ═══════════════════════════════════════════════════════════════
# 📱 BLUESTACKS / ADB SETTINGS
# ═══════════════════════════════════════════════════════════════
ADB_PATH=C:\\Program Files\\BlueStacks_nxt\\HD-Adb.exe

# LINE Package Name
LINE_PACKAGE=jp.naver.line.android


# ═══════════════════════════════════════════════════════════════
# 🖥️ MULTI-INSTANCE SETTINGS
# ═══════════════════════════════════════════════════════════════
# Mode: parallel = ส่งพร้อมกัน, sequential = ส่งทีละตัว
MULTI_SEND_MODE=parallel


# ═══════════════════════════════════════════════════════════════
# ⏱️ DELAY SETTINGS (milliseconds)
# ═══════════════════════════════════════════════════════════════
DELAY_AFTER_TAP=1000
DELAY_AFTER_TYPE=500
DELAY_AFTER_SEND=2000
DELAY_BETWEEN_FRIENDS=3000
DELAY_PAGE_LOAD=2000


