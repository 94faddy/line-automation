# LINE Web Automation Config

# Server
PORT=3000
HOST=localhost

# BlueStacks ADB
ADB_PATH=C:\\Program Files\\BlueStacks_nxt\\HD-Adb.exe

# Multi-Instance Support
# แยกด้วย comma สำหรับหลาย instance
# Instance 1: 127.0.0.1:5555 (Default)
# Instance 2: 127.0.0.1:5565
# Instance 3: 127.0.0.1:5575
# ...
DEVICE_IDS=127.0.0.1:5555

# LINE Package
LINE_PACKAGE=jp.naver.line.android

# Delays (ms)
DELAY_AFTER_TAP=1000
DELAY_AFTER_TYPE=500
DELAY_AFTER_SEND=2000
DELAY_BETWEEN_FRIENDS=3000
DELAY_PAGE_LOAD=2000

# Coordinates (1080x1920 Portrait)
COORD_FRIENDS_X=143
COORD_FRIENDS_Y=399
COORD_FRIEND_START_X=300
COORD_FRIEND_START_Y=351
COORD_FRIEND_HEIGHT=89
COORD_CHAT_BTN_X=252
COORD_CHAT_BTN_Y=1715
COORD_INPUT_X=400
COORD_INPUT_Y=1881
COORD_SEND_X=1040
COORD_SEND_Y=1881
COORD_BACK_X=33
COORD_BACK_Y=76
COORD_HOME_X=108
COORD_HOME_Y=1869

# Auto Recovery
AUTO_RECOVERY=true
RECOVERY_CHECK_INTERVAL=5000

# Multi-Instance Mode
# parallel = ส่งพร้อมกันทุก instance
# sequential = ส่งทีละ instance
MULTI_SEND_MODE=parallel
